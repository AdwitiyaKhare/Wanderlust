<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-6 offset-3 text-center">
    <h1 class="mb-4">Login to Wanderlust</h1>

    <!-- Traditional login form -->
    <form
      method="POST"
      action="/login"
      novalidate
      class="needs-validation mb-3"
    >
      <div class="mb-3 text-start">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
        <label for="password" class="form-label mt-2">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn btn-success w-100 mb-3">Login</button>
    </form>

    <hr class="my-4" />

    <!-- Google Sign-In -->
    <a
      href="/auth/google"
      class="d-inline-flex align-items-center justify-content-center bg-blue text-white px-4 py-2 rounded"
      style="
        background-color: #4285f4;
        color: white;
        text-decoration: none;
        gap: 8px;
        width: 100%;
      "
    >
      Login with Google
    </a>
  </div>
</div>

<style>
  .bg-blue:hover {
    background-color: #3367D6 !important;
    text-decoration: none;
  }
</style>
