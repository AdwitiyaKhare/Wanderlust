<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <form
    method="POST"
    action="/listings/<%= listing._id %>?_method=PUT"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data"
  >
    <div class="col-8 offset-2">
      <h3>Edit Listing</h3>
      <div class="mb-3">
        <label for="title">Title</label>
        <input
          type="text"
          value="<%= listing.title %>"
          name="listing[title]"
          placeholder="Edit Title"
          class="form-control"
          id="title"
          required
        />
        <div class="invalid-feedback">Please enter a valid title</div>
      </div>

      <div class="mb-3">
        <label for="description">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Edit Description"
          class="form-control"
          id="description"
          required
        ><%= listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter a valid description</div>
      </div>

      <div class="mb-3">
        Original Image Preview<br />
        <img src="<%= originalImageUrl %>" alt="" />
      </div>

      <div class="mb-3">
        <label for="image">Image Link</label>
        <input
          type="file"
          name="listing[image]"
          placeholder="Edit Image URL/LINK"
          class="form-control"
          id="image"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price">Price</label>
          <input
            type="number"
            value="<%= listing.price %>"
            name="listing[price]"
            placeholder="Edit Price"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country">Country</label>
          <input
            type="text"
            value="<%= listing.location %>"
            name="listing[location]"
            placeholder="Enter Location"
            class="form-control"
            id="country"
            required
          />
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-4">
          <label for="catagory" class="form-label">Catagory</label>
          <select name="listing[category]" class="form-select" id="category">
            <% const categories = ["rooms", "iconic cities", "mountains",
            "castles", "amazing pools", "camping", "farms", "arctic", "domes",
            "boats"]; %>
            <% if(listing.category === "other") { %>
              <option value="other" selected>Other</option>
              <% } else { %>
                <option value="other">Other</option>
                <% } %> 
            <% categories.forEach(category => { %>
            <% if(category === listing.category) { %>
              <option value="<%= category %>" selected>
                <%= category.charAt(0).toUpperCase() + category.slice(1) %>
              </option>
            <% } else { %>
              <option value="<%= category %>">
                <%= category.charAt(0).toUpperCase() + category.slice(1) %>
              </option>
            <% }}) %>
          </select>
        </div>
        <div class="mb-3 col-8">
          <label for="location">Location</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            placeholder="Enter Country"
            class="form-control mt-2"
            id="location"
            required
          />
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>
      </div>
      <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </div>
  </form>
</div>
