<div
  class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3"
  id="listings-container"
>
  <% if (listings.length == 0) { %>
  <div style="width: 100%; text-align: center" class="alert alert-warning">
    No Listings were found in this category
  </div>
  <% } %> <% for (const listing of listings) { %>
  <div class="col mb-4 listing-parent">
    <div class="card listing-card h-100">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem; object-fit: cover"
        />
      </a>

      <div
        class="card-body d-flex justify-content-between align-items-center mb-2"
        style="height: 2rem"
      >
        <div>
          <p class="card-text mb-0">
            <b><%= listing.title %></b><br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
        </div>

        <button
          class="btn-book-now"
          onclick="initiatePayment('<%= listing._id %>', parseInt('<%= listing.price %>'), '<%= listing.title %>')"
        >
          Book Now
        </button>
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
  async function initiatePayment(listingId, price, title) {
  try {
    const res = await fetch("/payment/create-checkout-session", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      credentials: "include",
      body: JSON.stringify({
        productId: listingId,
        price: price,
        email: "<%= currUser ? currUser.email : '' %>",
      }),
    });

    const data = await res.json();

    if (data.url) {
      window.location.href = data.url; // proceed to Stripe
    } else if (data.error) {
      if (data.error.includes("logged in")) window.location.href = "/login?message=error";
    }
  } catch (err) {
    console.error("Payment error:", err);
    alert("Something went wrong. Please try again.");
  }
}

  // Category filter (unchanged)
  const filters = document.getElementsByClassName("filter");
  for (const filter of filters) {
    filter.addEventListener("click", async () => {
      const underline = document.getElementsByClassName("underline");
      const category = filter.children[1].innerHTML.toLowerCase();
      if (underline.length > 0) underline[0].classList.remove("underline");
      filter.classList.add("underline");
      await filterByCategory(category);
    });
  }
</script>
