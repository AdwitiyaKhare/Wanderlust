<style>
  #filters {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
  }
  .filter {
    display: flex;
    flex-direction: column;
    text-align: center;
    margin-left: 1.375rem;
    margin-right: 1.375rem;
    margin-top: 2rem;
    opacity: 0.5;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  #filters a {
    color: black;
    text-decoration: none;
    opacity: 0.5;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-top: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
  }

  .underline {
    border-bottom: 0.25rem solid black;
    border-radius: 5%;
    opacity: 1;
  }

  .listing-card img:hover {
    opacity: 0.8;
  }

  .btn-book-now {
    background: linear-gradient(135deg, #0078ff, #00c6ff);
    border: none;
    color: white;
    padding: 0.45rem 1.1rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 120, 255, 0.25);
  }

  .btn-book-now:hover {
    background: linear-gradient(135deg, #005ecb, #00a4e4);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 120, 255, 0.35);
  }

  .btn-book-now:active {
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(0, 120, 255, 0.2);
  }

  @media (max-width: 1200px) {
    .filter {
      margin-left: 1.2rem;
      margin-right: 1.2rem;
    }

    #listings-container {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem; 
    }

    .listing-parent {
      flex-basis: calc(50% - 1rem) !important;
      flex-grow: 1 !important;
    }
  }

  @media (max-width: 992px) {
    .filter {
      margin-left: 0.75rem;
      margin-right: 0.75rem;
    }

    .container {
      
    }
    #listings-container {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
    .listing-card {
      width: 40rem;
    }

    .listing-parent {
      flex-basis: calc(50% - 0.5rem) !important;
      flex-grow: 1 !important;
    }
  }

  
</style>

