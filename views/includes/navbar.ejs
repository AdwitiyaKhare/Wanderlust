<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }

  .space {
    height: 0;
    overflow: hidden;
    transition: height 0.3s ease;
  }

  @media (max-width: 996px) {
    .search-btn span {
      display: none;
    }
    .search-btn i {
      margin-right: 0;
    }
    #searchInput {
      width: 240px !important;
    } 
  }

  @media (max-width: 767px) {
    .navbar-collapse {
      border-top: 1px solid black;
      border-bottom: 1px solid black;
      background-color: #fff;
    }
    
    .navbar-toggler {
      margin-bottom: 1rem;
    }

    .space {
      display: block;
    }

    .top-space {
      height: 9rem;
    }
  }

  .login-signup {
    flex-direction: row;
  }

  .login-signup a {
    padding: .5rem;
  }

  @media (max-width: 760px) {
    * {
      font-size: 0.9rem;
    }

    .home {
      margin-left: 0.5rem !important;
    }
  }

  @media (max-width: 670px) {
    .navbar {
      height: 90px;
      align-items: start;
    }

    .navbar-brand {
      align-self: start;
    }

    .home {
      margin-top: 2px;
      align-self: start;
    }
    
    .login-signup {
      flex-direction: column-reverse;
      flex-wrap: wrap;
      align-items: flex-end !important;
    }

    .search-container {
      position: absolute;
      left: 56%;
      top: 3rem;

      transform: translate(-50%, -50%);
      
      margin: 0 auto;
    }
    
    .create-new {
      position: absolute;
      left: 0.5rem;
      top: 3rem;
    }
    
    .log-out {
      margin-top: 18px;
      background-color: rgba(255, 0, 0, 0.834);
      color: white !important;
    }


    
  }

  @media (max-width: 515px) {
    .search-container {
      left: 50%;
      top: 7.5rem;
      width: 90%;
    }

    .navbar {
      height: 140px;
    }

    #searchInput {
      width: 80% !important;
    }

    .search-btn {
      width: 30%;
    }

    .search-btn span {
      display: inline;
      margin-left: 10px;
    }
  }

  @media (max-width: 408px) {
    .search-btn span {
      display: none;
    }
    #searchInput {
      width: 85% !important;
    }
    .search-btn {
      width: 15%;
    }
  }

  
  
</style>

<nav class="navbar bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex align-items-center nav-child">

    <!-- Logo -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Explore -->
    <div class="navbar-nav home ms-3">
      <a class="nav-link btn btn-light" href="/listings">Explore</a>
    </div>

    <!-- Search -->
    <div class="navbar-nav ms-auto search-container">
      <form class="d-flex" role="search" id="searchForm" style="position: relative;">
        <i
          class="fa-solid fa-magnifying-glass"
          style="margin-top: 1rem; margin-left: 1.2rem; position: absolute;"
        ></i>

        <input
          id="searchInput"
          class="form-control me-2 search-inp"
          type="search"
          placeholder="Search destinations"
          style="padding: 0; height: 3rem; padding-left: 3rem; width: 384px; padding-right: 1rem;"
        />

        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          <span>Search</span>
        </button>
      </form>
    </div>

    <!-- Right actions -->
    <div class="navbar-nav ms-auto d-flex align-items-center login-signup">
      <a class="nav-link create-new btn btn-light" href="/listings/new">
        Airbnb your home
      </a>

      <% if(!currUser) { %>
        <a class="nav-link btn btn-light" href="/signup"><b>Sign up</b></a>
        <a class="nav-link btn btn-light" href="/login"><b>Log in</b></a>
      <% } %>

      <% if(currUser) { %>
        <a class="nav-link btn btn-danger log-out" href="/logout"><b>Logout</b></a>
      <% } %>
    </div>

  </div>
</nav>
<div class="space"></div>

<script>
  // Search Feature
  document
    .getElementById("searchForm")
    .addEventListener("submit", async (e) => {
      e.preventDefault();
      const query = document.getElementById("searchInput").value.trim();
      if (!query) return;

      try {
        const res = await fetch(`/api/listings?search=${encodeURIComponent(query)}`);
        const data = await res.json();
        const listingsContainer = document.getElementById("listings-container");
        listingsContainer.innerHTML = "";

        if (data.listings.length === 0) {
          listingsContainer.innerHTML = `
            <div style="width: 100%; text-align: center" class="alert alert-warning">
              No results found for "<b>${query}</b>"
            </div>`;
          return;
        }

        data.listings.forEach((listing) => {
          const html = `
            <div class="col mb-4 listing-parent">
              <div class="card listing-card h-100">
                <a href="/listings/${listing._id}" class="listing-link">
                  <img
                    src="${listing.image.url}"
                    class="card-img-top"
                    alt="listing_image"
                    style="height: 20rem; object-fit: cover"
                  />
                </a>

                <div class="card-body d-flex justify-content-between align-items-center mb-2" style="height: 2rem">
                  <div>
                    <p class="card-text mb-0">
                      <b>${listing.title}</b><br />
                      &#8377; ${listing.price.toLocaleString("en-IN")} / night
                      <i class="tax-info tax">
                        &nbsp;&nbsp;+ 18% gst = &#8377; ${(
                          listing.price * 1.18
                        ).toLocaleString("en-IN")} / night
                      </i>
                    </p>
                  </div>

                  <button
                    class="btn-book-now"
                    onclick="initiatePayment('${listing._id}', ${listing.price}, '${listing.title}')"
                  >
                    Book Now
                  </button>
                </div>
              </div>
            </div>
          `;
          listingsContainer.innerHTML += html;
        });
      } catch (err) {
        console.error("Error fetching search results:", err);
      }
    });
</script>